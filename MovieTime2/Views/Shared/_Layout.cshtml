<!DOCTYPE html>
<html>
<head>
    <title>CinemaCity</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jqueryandajax")
</head>

<body class="bgblack">
    <div class="row sticky-top darkerPrimary">
        <div class="col-md-12">
            <div class=" navbar navbar-expand-lg padding-0 margin-b">

                <a href="@Url.Action("Index", "Home")" style="width:17%">
                    <img src="@Url.Content("~/Content/Images/CinemaCity.png")" style="width:100%">
                </a>

                <form class="navbar-form ml-auto">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter Movie Title">
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Cart", "Cart", "AddToCart", new { area = "" }, new { @class = "navbar-brand elementYellow" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Register", "Register", "Security", new { area = "" }, new { @class = "navbar-brand elementYellow" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Login", "Login", "Security", new { area = "" }, new { @class = "navbar-brand elementYellow" })
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!--Renders child elements-->
    @RenderBody()

</body>
</html>
