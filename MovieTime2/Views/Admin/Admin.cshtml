@model MovieTime2.Models.Admin

@{
    ViewBag.Title = "Admin";
}

<div class="row p-lg-5" id="logintable">
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form class="col-lg-6" method="post">
            <div class="form-row">
                <h2 style="color:white">Login</h2>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-form-label text-light" })
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label text-light" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-default" />
                    <div class="form-row">
                        <p style="color:white">Don't have an account?</p>
                        <a href="" id="registration-login">Register here!</a>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

