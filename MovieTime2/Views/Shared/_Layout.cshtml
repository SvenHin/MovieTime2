<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body>
    <div class="row sticky-top darkerPrimary">
        <div class="col-md-12">
            <div class=" navbar navbar-expand-lg padding-0 margin-b">
                <ul class="navbar-nav marginLeft">
                    <li class="nav-item">
                        @Html.ActionLink("Movie Time", "Index", "Home", new { area = "" }, new { @class = "navbar-brand elementYellow" })
                    </li>
                </ul>
                <form class="navbar-form ml-auto">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Enter Movie Title">
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                    @Html.ActionLink("Cart", "Cart", "AddToCart", new { area = "" }, new { @class = "navbar-brand elementYellow" })
                    </li>
                    <li class="nav-item">
                    @Html.ActionLink("Register", "Register", "Security", new { area = "" }, new { @class = "navbar-brand elementYellow" })
                     </li>
                    <li class="nav-item">
                    @Html.ActionLink("Login", "Login", "Security", new { area = "" }, new { @class = "navbar-brand elementYellow" })
                     </li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
