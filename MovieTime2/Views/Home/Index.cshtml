    <script type="text/javascript">
        $(function () {
            $.ajax({
                url: '/Home/getAllGenresController',
                type: 'GET',
                dataType: 'json',
                success: function (genre) {
                    ShowDropdown(genre);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });

            /*$.ajax({
                url: '/Home/getAllMovieURLs',
                type: 'GET',
                dataType: 'json',
                success: function (imageMovie) {
                    ListMovies(imageMovie);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });*/

            $("#drop").change(function () {
                var id = $(this).val();
                $.ajax({
                    url: '/Home/getMoviesFromGenre/' + id,
                    type: 'GET',
                    dataType: 'json',
                    success: function (imageMovies) {
                        ListMovies(imageMovies);
                    },
                    error: function (x, y, z) {
                        alert(x + '\n' + y + '\n' + z);
                    }
                });
            });
        })
        function ShowDropdown(genre) {
            var utStreng = "";
            for (var i in genre) {
                utStreng += "<option value='" + genre[i].id + "'>" + genre[i].title + "</option>";
            }
            $("#drop").append(utStreng);
        }
        function ListMovies(imageMovie) {
            var utStreng = "";
            for (var i in imageMovie) {
                utStreng += "<div class='card cardPadding'><img src='" + imageMovie[i].imageURL + "' alt='image'/></div>"
            }
            $("#MovieList").html(utStreng);

        }
        function ShowInfo(movie) {
            var utStreng = movie.title + " " + kunde.summary + " " + kunde.price + " ";
            $("#MovieList").html(utStreng);
        }

        function on() {
            document.getElementById("overlay").style.display = "block";
        }

        function off() {
            document.getElementById("overlay").style.display = "none";
        }
    </script>
</head>
