@model MovieTime2.Models.Customer

@{
    ViewBag.Title = "Register";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/register.css"/>
    @Scripts.Render("~/bundles/jqueryvalidation")
    <script>
        $("document").ready(function () {
            $("#registrationtable").hide();
        });
        $(function () {
            $('#registration-login').click(function () {
                $('#registrationtable').show();
                $("#logintable").hide();
                return false;
            });
        });
        $(function () {
            $('#login-registration').click(function () {
                $('#registrationtable').hide();
                $("#logintable").show();
                return false;
            });
        });
    </script>
</head>
<body>
    <div class="row p-lg-5" id="registrationtable">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <form class="col-lg-6" method="post" action="@Url.Action("Register", "Security")">
                <div class="form-row">
                    <h2 style="color:white">Register</h2>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-6">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-form-label text-light   " })
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-6">
                        @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-6">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.ZipCode, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Register" class="btn btn-default" />
                        <div class="form-row">
                            <p style="color:white">Already have an account?</p>
                            <a href="" id="login-registration">Log In here!</a>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>


    <div class="row p-lg-5" id="logintable">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form class="col-lg-6" method="post" action="@Url.Action("Login", "Security")">
                <div class="form-row">
                    <h2 style="color:white">Login</h2>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label text-light" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-default" />
                        <div class="form-row">
                            <p style="color:white">Don't have an account?</p>
                            <a href="" id="registration-login">Register here!</a>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</body>

           




